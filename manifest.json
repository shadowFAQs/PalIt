{
  "name": "PalIt",
  "version": "0.0.0",
  "description": "Create and save color palettes from the web",
  "homepage_url": "https://github.com/awesome-templates/browser-extension-template",
  "manifest_version": 2,
  "minimum_chrome_version": "74",
  "browser_action": {
    "default_icon": {
      "16": "img/icon16.png",
      "24": "img/icon24.png",
      "32": "img/icon32.png"
    },
    "default_title": "PalIt Title",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "tabs"],
  "content_scripts":[
    {
      "css": ["style.css"],
      "matches": ["<all_urls>"]
    }
  ]
}